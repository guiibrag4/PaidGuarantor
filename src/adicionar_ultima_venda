import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

public class AdicionarUltimaVenda {

    public static void main(String[] args) {
        Connection conn = null;

        try {
            // Configurar a conexão com o banco de dados
            String url = "jdbc:mysql://localhost:3306/seu_banco_de_dados";
            String usuario = "seu_usuario";
            String senha = "sua_senha";

            conn = DriverManager.getConnection(url, usuario, senha);

            // Consultar a última venda realizada
            String consultaUltimaVenda = "SELECT * FROM vendas ORDER BY data_venda DESC LIMIT 1";
            PreparedStatement stmt = conn.prepareStatement(consultaUltimaVenda);
            ResultSet resultado = stmt.executeQuery();

            // Verificar se há alguma venda
            if (resultado.next()) {
                // Obter os dados da última venda
                int idVenda = resultado.getInt("id_venda");
                double valor = resultado.getDouble("valor");
                String dataVenda = resultado.getString("data_venda");

                // Adicionar a última venda ao banco de dados novamente
                String inserirUltimaVenda = "INSERT INTO vendas (valor, data_venda) VALUES (?, ?)";
                PreparedStatement stmtInserir = conn.prepareStatement(inserirUltimaVenda);
                stmtInserir.setDouble(1, valor);
                stmtInserir.setString(2, dataVenda);
                stmtInserir.executeUpdate();

                System.out.println("Última venda adicionada ao banco de dados novamente.");
            } else {
                System.out.println("Nenhuma venda encontrada.");
            }
        } catch (SQLException e) {
            e.printStackTrace();
        } finally {
            // Fechar a conexão com o banco de dados
            if (conn != null) {
                try {
                    conn.close();
                } catch (SQLException e) {
                    e.printStackTrace();
                }
            }
        }
    }
}
